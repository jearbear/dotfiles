[alias]
    b = branch

    s = status

    l = log --oneline --graph master..
    t = log --format='%C(auto)%h%d %s%n' --graph --since='1 month ago' --branches --author='Jerry'
    tall = log --format='%C(auto)%h%d %s' --graph --since='1 month ago' --branches

    co = checkout
    com = checkout master
    cob = !git co $(git b | rg -v '^\\*' | fzf)

    unstage = reset -q HEAD --
    recommit = commit --amend --no-edit
    uncommit = reset --soft HEAD^

    fix = !git commit --fixup \"${1:-HEAD}\" && :

    squash = !git reset --soft \"${1:-HEAD~2}\" && git commit && :
    squash-branch = !git squash $(git base)

    d = diff
    dh = diff HEAD~
    diff-branch = !git diff $(git base)

    base = merge-base HEAD master
    head = rev-parse HEAD

    fpush = push --force-with-lease

[commit]
    gpgSign = true
    verbose = true

[color]
    ui = true

[color "diff-highlight"]
    oldNormal = red
    oldHighlight = red bold reverse
    newNormal = green
    newHighlight = green bold reverse

[color "diff"]
    meta = white
    frag = magenta bold
    old = red
    new = green
    whitespace = red reverse

[help]
    autocorrect = 1

[log]
    date = relative

[diff]
    algorithm = patience
    indentheuristic = true

[merge]
    conflictstyle = diff3
    tool = fugitive

[mergetool "fugitive"]
    cmd = nvim -f -c "Gdiff" "$MERGED"

[pager]
    diff = diff-so-fancy | less --tabs=4 -RFX

[pull]
    ff = only
    rebase = true

[push]
    default = current

[rebase]
    autostash = true

[stash]
    showPatch = true

[include]
    path = .gitconfig.local
