[alias]
    b = branch
    s = status
    t = log --graph --pretty=format:'%C(auto)%h%d %s %C(yellow):: %C(reset)%an %C(yellow):: %C(reset)%ad' --decorate
    co = checkout

    bdel = branch -D
    diffh = diff HEAD~
    fpush = push --force-with-lease
    recommit = commit --amend --no-edit
    stash-all = stash save --include-untracked
    uncommit = reset --soft HEAD^

[commit]
    gpgSign = true

[color]
    ui = true

[color "diff-highlight"]
    oldNormal = red
    oldHighlight = red bold reverse
    newNormal = green
    newHighlight = green bold reverse

[color "diff"]
    meta = white
    frag = magenta bold
    old = red
    new = green
    whitespace = red reverse

[help]
    autocorrect = 1

[log]
    date = relative

[merge]
    conflictstyle = diff3
    ; ff = only

[pager]
    diff = diff-so-fancy | less --tabs=4 -RFX

[pull]
    ff = only
    rebase = true

[push]
    default = current

[rebase]
    autostash = true

[stash]
    showPatch = true

[include]
    path = .gitconfig.local
