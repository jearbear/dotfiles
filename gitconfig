[alias]
    b = branch
    bd = branch -d
    ba = branch -a
    bm = branch -m

    s = status
    t = log --graph --pretty=format:'%C(auto)%h%d %s %C(yellow):: %C(reset)%an %C(yellow):: %C(reset)%ad' --decorate

    co = checkout

    com = commit
    recommit = commit --amend --no-edit
    uncommit = reset --soft HEAD^

    d = diff
    dh = diff HEAD
    dH = diff HEAD~
    ds = diff --stat

    fpush = push --force-with-lease

    stash-all = stash save --include-untracked

[commit]
    gpgSign = true
    verbose = true

[color]
    ui = true

[color "diff-highlight"]
    oldNormal = red
    oldHighlight = red bold reverse
    newNormal = green
    newHighlight = green bold reverse

[color "diff"]
    meta = white
    frag = magenta bold
    old = red
    new = green
    whitespace = red reverse

[help]
    autocorrect = 1

[log]
    date = relative

[merge]
    conflictstyle = diff3
    ; ff = only

[pager]
    diff = diff-so-fancy | less --tabs=4 -RFX

[pull]
    ff = only
    rebase = true

[push]
    default = current

[rebase]
    autostash = true

[stash]
    showPatch = true

[include]
    path = .gitconfig.local
