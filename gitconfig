[alias]
    b = branch

    s = status

    l = log --oneline
    tree = log --graph --pretty=format:'%C(auto)%h%d %s %C(yellow):: %C(reset)%an %C(yellow):: %C(reset)%ad' --decorate

    co = checkout
    com = checkout master
    cob = !git co $(git b | rg -v '^\\*' | fzf)

    unstage = reset HEAD
    recommit = commit -a --amend --no-edit
    uncommit = reset --soft HEAD^

    squash = !git reset --soft \"${1:-HEAD~2}\" && git commit && :

    d = diff
    dh = diff HEAD~

    pr = pull --rebase

    fpush = push --force-with-lease

[commit]
    gpgSign = true
    verbose = true

[color]
    ui = true

[color "diff-highlight"]
    oldNormal = red
    oldHighlight = red bold reverse
    newNormal = green
    newHighlight = green bold reverse

[color "diff"]
    meta = white
    frag = magenta bold
    old = red
    new = green
    whitespace = red reverse

[help]
    autocorrect = 1

[log]
    date = relative

[merge]
    conflictstyle = diff3
    ; ff = only

[pager]
    diff = diff-so-fancy | less --tabs=4 -RFX

[pull]
    ff = only
    rebase = true

[push]
    default = current

[rebase]
    autostash = true

[stash]
    showPatch = true

[include]
    path = .gitconfig.local
