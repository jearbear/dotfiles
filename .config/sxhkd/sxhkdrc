#
# bspwm hotkeys
#

alt + shift + r
    pkill -USR1 -x sxhkd

alt + shift + Escape
	bspc quit

alt + shift + q
	bspc node -c

alt + Escape
    slock


#
# state/flags
#

alt + {a,d,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}


#
# focus/swap
#

alt + w
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

alt + {p,b,comma,period}
	bspc node -f @{parent,brother,first,second}

alt + {Tab,grave}
	bspc {node,desktop} -f last

alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'


#
# preselect
#

alt + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

alt + ctrl + {1-9}
	bspc node -o 0.{1-9}

alt + ctrl + space
	bspc node -p cancel

alt + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


#
# resize tiled/floating
#

super + {h,j,k,l}
	bspc node {@west -r -100,@south -r +100,@north -r -100,@east -r +100}

super + shift + {h,j,k,l}
	bspc node {@east -r -100,@north -r +100,@south -r -100,@west -r +100}


#
# random hotkeys
#

alt + space
    rofi -modi "run" -show run

alt + shift + space
    rofi-pass

alt + shift + equal
    rofi -modi "calc:qalc -t +u8" -show calc

alt + Return
    termite

alt + shift + Return
    termite -e ranger --class=ranger


#
# screenshots
#

Print
    scrot 'desk_%b-%d-%Y_%H:%M:%S.png' -q 100 -e 'convert $f $f && mkdir -p ~/downloads/scrots && mv $f ~/downloads/scrots/'; notify-send 'scrot' 'desktop captured'

alt + Print
    scrot -u 'win_%b-%d-%Y_%H:%M:%S.png' -q 100 -e 'convert $f $f && mkdir -p ~/downloads/scrots && mv $f ~/downloads/scrots/'; notify-send 'scrot' 'window captured'

alt + ctrl + Print
    scrot -s 'sel_%b-%d-%Y_%H:%M:%S.png' -q 100 -e 'convert $f $f && mkdir -p ~/downloads/scrots && mv $f ~/downloads/scrots/'; notify-send 'scrot' 'selection captured'


#
# media keys
#

XF86AudioMute
    ponymix toggle

XF86AudioLowerVolume
    ponymix decrease 5

XF86AudioRaiseVolume
    ponymix increase 5

XF86MonBrightnessUp
    xbacklight -inc 5

XF86MonBrightnessDown
    xbacklight -dec 5

# XF86Display
#     commander disp_toggle


#
# media controls
#

alt + bracketleft
    playerctl previous

alt + bracketright
    playerctl next

alt + backslash
    playerctl play-pause


#
# change languages
#

alt + shift + u
    setxkbmap us basic

alt + shift + i
    setxkbmap us intl
