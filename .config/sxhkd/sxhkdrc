#
# bspwm hotkeys
#

alt + shift + r
    pkill -USR1 -x sxhkd

alt + shift + Escape
	bspc quit

alt + shift + q
	bspc node -c



#
# state/flags
#

alt + {a,shift + s,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}


#
# focus/swap
#

alt + w
	bspc query -N -n focused.automatic && bspc node -n last.!automatic || bspc node last.leaf -n focused

alt + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

alt + {apostrophe}
	bspc node -f @{parent}
	# bspc node -f @{parent,brother,first,second}

alt + {Tab,grave}
	bspc {node,desktop} -f last

alt + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'


#
# preselect
#

alt + {y,u,i,o}
	bspc node -p {west,south,north,east}

# alt + ctrl + {1-9}
# 	bspc node -o 0.{1-9}

# alt + ctrl + space
# 	bspc node -p cancel

~Escape
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel


#
# resize tiled/floating
#

alt + {n,m,comma,period}
	bspc node {@west -r -100,@south -r +100,@north -r -100,@east -r +100}

# alt + shift + {n,m,comma,period}
# 	bspc node {@east -r -100,@north -r +100,@south -r -100,@west -r +100}


#
# random hotkeys
#

alt + d
    rofi -modi "run" -show run

alt + slash
    rofi-pass

alt + Return
    alacritty

alt + shift + Return
    alacritty -e ranger


#
# screenshots
#

Print
    scrot 'desk_%b-%d-%Y_%H:%M:%S.png' -q 100 -e 'convert $f $f && mkdir -p ~/downloads/scrots && mv $f ~/downloads/scrots/'; notify-send 'scrot' 'desktop captured'

alt + Print
    scrot -u 'win_%b-%d-%Y_%H:%M:%S.png' -q 100 -e 'convert $f $f && mkdir -p ~/downloads/scrots && mv $f ~/downloads/scrots/'; notify-send 'scrot' 'window captured'

alt + shift + Print
    scrot -s 'sel_%b-%d-%Y_%H:%M:%S.png' -q 100 -e 'convert $f $f && mkdir -p ~/downloads/scrots && mv $f ~/downloads/scrots/'; notify-send 'scrot' 'selection captured'


#
# media keys
#

XF86AudioMute
    ponymix toggle

XF86AudioLowerVolume
    ponymix decrease 5

XF86AudioRaiseVolume
    ponymix increase 5

XF86MonBrightnessUp
    xbacklight -inc 5

XF86MonBrightnessDown
    xbacklight -dec 5

# XF86Display
#     commander disp_toggle

{XF86AudioPlay, XF86AudioPause, alt + backslash}
    playerctl play-pause

{XF86AudioPrev, alt + bracketleft}
    playerctl previous

{XF86AudioNext, alt + bracketright}
    playerctl next

alt + shift + backslash
    ponymix set-profile headset_head_unit && ponymix set-profile a2dp_sink

alt + shift + bracketleft
    echo 'disconnect' | bluetoothctl

alt + shift + bracketright
    echo 'connect 00:16:94:1C:2A:7E' | bluetoothctl


#
# change languages
#

alt + shift + u
    setxkbmap us basic

alt + shift + i
    setxkbmap us intl
